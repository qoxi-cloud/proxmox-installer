[Unit]
Description=chkrootkit rootkit scanner
Documentation=man:chkrootkit(8)
After=local-fs.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c '/usr/sbin/chkrootkit > /var/log/chkrootkit/scan-$(date +%%Y%%m%%d).log 2>&1'

# Security hardening
ProtectSystem=strict
ReadWritePaths=/var/log/chkrootkit
PrivateTmp=true
NoNewPrivileges=true
